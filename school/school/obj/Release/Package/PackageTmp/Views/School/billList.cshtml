
@{
    Layout = null;
  
}

<!DOCTYPE html>
<html>

<head lang="en">
    <meta name="viewport" content="width=device-width" />
    <meta charset="UTF-8">
    <title>xx学校管理系统</title>
    <link rel="stylesheet" href="~/css/public.css" />
    <link rel="stylesheet" href="~/css/styl.css" />
 
</head>


<body>
    <!--头部-->
    <header class="publicHeader">
        <h1>xx学校管理系统</h1>
        <div class="publicHeaderR">
            <p><span>下午好！</span><span style="color: #fff21b"> @school.Controllers.CookieHelper.Read("username")</span> , 欢迎你！</p>
            <a href="login">退出</a>
        </div>
    </header>
    <!--时间-->
    <section class="publicTime">
        <span id="time">2015年1月1日 11:11  星期一</span>
        <a href="#">温馨提示：为了能正常浏览，请使用高版本浏览器！（IE10+）</a>
    </section>
    <!--主体内容-->
    <section class="publicMian ">
        <div class="left">
            <h2 class="leftH2"><span class="span1"></span>功能列表 <span></span></h2>
            <nav>
                <ul class="list">
                    <li id="active"><a href="billList">栏目管理</a></li>
                    <li><a href="providerList">文章管理</a></li>
                    <li><a href="userList">用户管理</a></li>
                    <li><a href="password">密码修改</a></li>
                    <li><a href="login">退出系统</a></li>
                </ul>
            </nav>
        </div>
        <div class="right">
            <div class="location">
                <strong>你现在所在的位置是:</strong>
                <span>栏目管理页面</span>
            </div>
            <div class="search">
                <span>xx：</span>
                <input type="text" placeholder="请输入商品的名称" />

                <span>文章标题：</span>
                <select name="tigong">
                    <option value="">@ViewBag</option>
                    <option value="">@ViewBag</option>
                    <option value="">@ViewBag</option>
                </select>

                <span>栏目级别：</span>
                <select name="fukuan">
                    <option value="">一级栏目</option>
                    <option value="">二级级栏目</option>
                    <option value="">三级级栏目</option>
                </select>

                <input type="button" value="查询" />
                <a href="billAdd">添加栏目</a>
            </div>
            <!--账单表格 样式和供应商公用-->
            <table class="providerTable" cellpadding="0" cellspacing="0">
                <tr class="firstTr">
                  
                    <th width="20%">文章标题</th>
                    <th width="10%">栏目分类</th>
                    <th width="10%">时间</th>
                    <th width="30%">操作</th>
                </tr>
                <tr>
                    <td>213</td>
                    <td>123</td>
                    <td>xx</td>
                    
                    <td>
                        <a href="billView"><img src="img/read.png" alt="查看" title="查看" /></a>
                        <a href="billUpdate"><img src="img/xiugai.png" alt="修改" title="修改" /></a>
                        <a href="#" class="removeBill"><img src="img/schu.png" alt="删除" title="删除" /></a>
                    </td>
                </tr>
               
            </table>
        </div>
    </section>

    <!--点击删除按钮后弹出的页面-->
    <div class="zhezhao"></div>
    <div class="remove" id="removeBi">
        <div class="removerChid">
            <h2>提示</h2>
            <div class="removeMain">
                <p>你确定要删除该栏目吗？</p>
                <a href="#" id="yes">确定</a>
                <a href="#" id="no">取消</a>
            </div>
        </div>
    </div>

    <footer class="footer"></footer>

    <script src="~/scripts/jquery.js"></script>
    <script src="~/scripts/js.js"></script>
    <script src="~/scripts/time.js"></script>

</body>

</html>